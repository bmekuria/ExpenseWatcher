<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_transaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.b.expensewatcher.TransactionActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/transaction_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trailRed"
        android:textSize="22sp"
        android:gravity="center"
        android:text="@string/delete" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:gravity="right"
        android:textSize="22sp"
        android:inputType="numberDecimal"
        android:hint="@string/entervalue"
        android:drawablePadding="5dp"
        android:id="@+id/transaction_value"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/transaction_date"
        android:drawableStart="@android:drawable/ic_menu_my_calendar"
        android:drawableLeft="@android:drawable/ic_menu_my_calendar"
        android:focusable="false"
        android:gravity="center"
        android:hint="dd/mm/yyyy" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/transaction_categoryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
